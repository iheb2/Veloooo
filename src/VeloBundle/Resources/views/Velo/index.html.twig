{% extends 'Velo.html.twig' %}

{% block title %}Les produits
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Les produits</h1>
    </div>

    <div class="row">
        {% for velo in velos %}
            <div class="col-4 mt-4">
                <div class="border border-dark rounded p-2 clearfix">
                    <h2>

                    </h2>
                    <img class="img-fluid rounded" src="{{ product.image }}" alt="Image de {{ product.title }}">
                    <hr>
                    <a href="{{ path('cart_add',{'id':Velo.id}) }}" class="btn btn-success float-right">
                        <i class="fas fa-shopping-cart mr-1"></i>
                        Ajouter
                    </a>
                </div>

            </div>
        {% endfor %}
    </div>
{% endblock %}
